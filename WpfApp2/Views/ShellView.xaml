                </MenuItem>
            </MenuItem>
            <MenuItem Header="Modele" Width="139">
                <MenuItem x:Name="modelShow" Header="Wyświetl">

                </MenuItem>
                <MenuItem x:Name="modelAdd" Header="Dodaj">

                </MenuItem>
            </MenuItem>
            <MenuItem Header="Samochody" Width="138">
                <MenuItem x:Name="carShow" Header="Wyświetl">

                </MenuItem>
                <MenuItem x:Name="carAdd" Header="Dodaj">

                </MenuItem>
            </MenuItem>
        </Menu>
        <Grid>
            <ContentControl x:Name="ActiveItem" Margin="7"/>
        </Grid>
    </DockPanel>

</Window>
